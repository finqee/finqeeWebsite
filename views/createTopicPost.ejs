<%- include('layout') %>
  
  <div class="container py-md-5 container--narrow">

    <%- include('flash') %>

    <form action="/create-topic" method="POST">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      <div class="form-group">
        <label for="post-title" class="text-muted mb-1"><small>Title</small></label>
        <input required name="title" id="post-title" class="form-control form-control-lg form-control-title" type="text" placeholder="" autocomplete="off">
      </div>

      <div class="form-group">
        <label for="post-body" class="text-muted mb-1"><small>Body Content</small></label>
      <textarea required name="body" id="post-body" class="body-content form-control" type="text" style="height: 200px;"></textarea>
      </div>
      
      <button class="btn btn-outline-primary">Save New Topic</button>
    </form>
  </div>